@using ErpMvcProject.BusinessLayer
@using ErpMvcProject.Entity
@{
    CompanyManager cm = new CompanyManager();
    List<Current> Companylist = cm.GetCompanies().ToList();

}
@Html.Partial("_PartialAside")
<div class="container">
    <h2>Company</h2>
    <table class="table table-light table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Address</th>
                <th scope="col">Authorized</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Email Address</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var cl in Companylist)
            {
                <tr>
                    <th scope="row">@cl.Id</th>
                    <td>@cl.cName</td>
                    <td>
                        @if (@cl.cTypeId == 1)
                        {

                        }
                    </td>
                    <td>@cl.Address1</td>
                    <td>@cl.sName1</td>
                    <td>@cl.cPhone</td>
                    <td>@cl.cMail</td>
                    <td>  @Html.ActionLink("Uptade & Details", "CompanyUpdate", "Company", new { cId = cl.Id }, new { @class = "btn btn-primary" })</td>
                    <td>  @Html.ActionLink("Delete", "CompanyDelete", new { cId = cl.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete this record? ');" })</td>
                </tr>

            }

        </tbody>
    </table>
</div>

<script type="text/javascript">

    document.getElementById("Title").innerText = "Companies";
</script>