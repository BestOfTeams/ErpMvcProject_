@using ErpMvcProject.BusinessLayer
@using ErpMvcProject.Entity
@{
    HospitalManager dm = new HospitalManager();
    List<Current> HospitalList = dm.GetHospitals().ToList();

}
@Html.Partial("_PartialAside")
<div class="container">
    <h2>Hospitals</h2>
    <table class="table table-light table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Authorized</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Email Address</th>
                <th scope="col">Update & Details</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hl in HospitalList)
            {
                <tr>
                    <th scope="row">@hl.Id</th>
                    <td>@hl.cName</td>
                    <td>@hl.Address1</td>
                    <td>@hl.sName1</td>
                    <td>@hl.cPhone</td>
                    <td>@hl.cMail</td>
                    <td> @Html.ActionLink("Uptade", "HospitalUpdate", "Hospital", new { hId = hl.Id }, new { @class = "btn btn-primary" })</td>
                    <td>  @Html.ActionLink("Delete", "HospitalDelete", new { hId = hl.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete this record? ');" })</td>


                </tr>

            }

        </tbody>
    </table>

</div>

<script type="text/javascript">

    document.getElementById("Title").innerText = "Hospitals";
</script>